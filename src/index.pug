doctype html
html(lang="es")
    head
        title Finder challenge
        meta(charset="utf-8")
        meta(viewport="width=device-width, initial-scale=1.0")
        link(href="https://fonts.googleapis.com/css?family=Proxima+Nova", rel="stylesheet", type="text/css")
        link(href="/vendor/pure/pure-min.css", rel="stylesheet")
        link(href="/styles/bootstrap.css", rel="stylesheet")
        link(href="/styles/index.css", rel="stylesheet")
        link(rel="stylesheet" href="/styles/awesomplete.css")
      

    body
        .app.pure-g
            header.pure-u-1
                .pure-u-1-3
                    h1.logo Finder challenge!
                .pure-u-7-24
                    include blocks/search-form
                .pure-u-1-3
            aside.filters.pure-u-1-4
                ul
                    li  
                        a  Categorias
                        ul#submenu-categories
                    li  
                        a   Idiomas
                        ul#submenu-idiomas 
                    li  
                        a   Publicacion 
                        ul#submenu-publicacion 
                            li
                                a(onclick='filtrarDatos(event)' entitiesType="date_pub") Todos
                            li 
                                a(onclick='filtrarDatos(event)' entitiesType="date_pub") Hace una semana
                            li 
                                a(onclick='filtrarDatos(event)' entitiesType="date_pub") Hace un mes
                            li 
                                a(onclick='filtrarDatos(event)' entitiesType="date_pub") Hace un año
                    li 
                        a   Presentacón
                        ul#submenu-edicion 
            content.pure-u-3-4
                .col-md-12
                    .row#row-busqueda
                    
            footer.pure-u-1

        //- third party libraries
        script(src="/vendor/underscore/underscore-min.js")

        //- app scripts self
        script(src="/scripts/global.js")
        script(src="/scripts/awesomplete.js" async)
        script(src="/scripts/search-form.js")
        script(src="/scripts/app.js")
        